# Generated by ansible-role-httpd
Listen 8080
# VHost for serving site traffic

<VirtualHost *:8080>
    ServerName {{ domain }}
    ServerAlias www.{{ domain }}
    ErrorLog {{ apache_log_path }}/{{ domain}}-backend-error.log
    CustomLog {{ apache_log_path }}/{{ domain }}-backend-access.log combined
    SetEnvIf X-Forwarded-Proto https HTTPS=on

    DocumentRoot "/var/www/vhosts/{{ domain }}"

    <Directory "/var/www/vhosts/{{ domain }}">
        AllowOverride All
        Options -Indexes +FollowSymLinks
        Require all granted
    </Directory>

    #comment


<FilesMatch ".+\.ph(ar|p|tml)$">
SetHandler "proxy:unix:/run/php/php7.2-fpm.sock|fcgi://localhost"
</FilesMatch>
</VirtualHost>